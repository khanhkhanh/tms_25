<% provide :title, @user.name %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <%= render @user.courses %>
    <% @user.user_subjects.each do |us| %>
      <div class="row">
        <li>
          <h4><%= us.subject.name %></h4>
          <span class="label label-primary"><%= us.status %></span>
          <%= us.created_at %>
          <%= render us.subject.tasks %>
        </li>
      </div>
    <% end %>
  </aside>
</div>
